<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生信息"
                android:textSize="20sp"
                android:textColor="@color/text_black_color"/>

            <ImageButton
                android:id="@+id/iv_student_close"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_close"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    android:text="姓名"/>

                <TextView
                    android:id="@+id/tv_name_value"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_head_portrait"/>

            </RelativeLayout>

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/other_line_color"/>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_cardid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    android:text="卡号"/>

                <TextView
                    android:id="@+id/tv_cardid_value"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_cardid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:textSize="20sp"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_attribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:text="归属"/>

            <TextView
                android:id="@+id/tv_attribution_value"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_attribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:textSize="20sp"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/other_line_color"/>

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    android:text="最近出门时间"/>

                <ImageView
                    android:id="@+id/iv_out_time"
                    android:layout_below="@+id/tv_out_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_out_time"/>

                <TextView
                    android:id="@+id/tv_out_time_value"
                    android:layout_alignTop="@+id/iv_out_time"
                    android:layout_toRightOf="@+id/iv_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:textSize="16sp"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/tv_out_time_value"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/other_line_color"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    android:text="最近进门时间"/>

                <ImageView
                    android:id="@+id/iv_in_time"
                    android:layout_below="@+id/tv_in_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_in_time"/>

                <TextView
                    android:id="@+id/tv_in_time_value"
                    android:layout_alignTop="@+id/iv_in_time"
                    android:layout_toRightOf="@+id/iv_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:textSize="16sp"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_in_time_value"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/other_line_color"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:text="状态"/>

            <TextView
                android:id="@+id/tv_state_value"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:textSize="20sp"/>

            <!--<ImageView-->

                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:background="@drawable/ic_check_stute"/>-->

        </RelativeLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/other_line_color"/>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_counsellor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:text="辅导员"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_counsellor_value"
                android:layout_below="@+id/tv_counsellor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:textSize="20sp"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/other_line_color"/>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:text="电话"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_phone_value"
                android:layout_below="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:textSize="20sp"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/other_line_color"/>

    </LinearLayout>

</ScrollView>