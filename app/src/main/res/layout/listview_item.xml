<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_item_type"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#223399"/>

        <TextView
            android:id="@+id/tv_item_addr"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="博雅苑2号"
            android:textColor="@color/text_black_color"/>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/text_black_color"/>

    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_head_portrait"/>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_time"/>

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:35"
            android:textColor="@color/text_gray_color"/>

        <ImageView
            android:id="@+id/iv_item_state"
            android:layout_marginLeft="30dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_in_time"/>

        <TextView
            android:id="@+id/tv_item_state"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进门"
            android:textColor="@color/text_gray_color"/>

    </LinearLayout>

</RelativeLayout>