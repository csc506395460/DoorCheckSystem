<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_logo"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_app_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"/>

            <ImageView
                android:id="@+id/iv_account"
                android:layout_below="@+id/tv_account"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_account"/>

            <EditText
                android:id="@+id/et_login_acct"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/iv_account"
                android:layout_toRightOf="@+id/iv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <!--android:text="androidpierec@invisionapp.com"-->

        </RelativeLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"/>

            <ImageView
                android:id="@+id/iv_password"
                android:layout_below="@+id/tv_password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_password"/>

            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/iv_password"
                android:layout_toRightOf="@+id/iv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@null"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#50d2c2"
            android:text="登 录"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>