<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/iv_main_menu"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_menu"/>

        <TextView
            android:id="@+id/tv_main_date"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_color"
            android:text="9月24日 周三"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/ibt_main_select_date"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_more"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/login_line_color">

        <LinearLayout
            android:id="@+id/ll_main_total"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/main_green_color"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            
            <TextView
                android:id="@+id/tv_main_total_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white_color"
                android:text="总数"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_main_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white_color"
                android:text="0"
                android:textSize="36sp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/main_yellow_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_sign"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_main_sign_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:text="已考勤"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_main_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:text="0"
                android:textSize="36sp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/main_purple_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_unsign"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_main_unsign_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:text="未考勤"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_main_unsign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:text="0"
                android:textSize="36sp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/main_red_color"/>

        </LinearLayout>

    </LinearLayout>

